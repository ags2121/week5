<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @event.title %>
</p>

<p>
  <b>Happening On:</b>
  <%= @event.datetime.to_date.to_formatted_s(:long_ordinal) %> at <%= @event.datetime.to_time.to_formatted_s(:time)   %>
</p>

<p>
  <b>Venue:</b>
  <%= @event.venue.name %>
</p>


